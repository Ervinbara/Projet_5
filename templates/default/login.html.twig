{% extends "template_base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="../assets/css/navbar_other_page.css"/>
{% endblock %}

{% block content %}

<div class="container">
    <form method="POST" action="?where=login">
    <h2>Connexion</h2>
    {% if message is not null %}
        <div class="alert alert-danger" role="alert">
            {{message}}
        </div>
    {% endif %}
    <div class="form-group">
        <label>Pseudo ou adresse e-mail</label>
        <input type="text" placeholder="Votre Pseudo ou e-mail" id="username" name="username" class="form-control">
    </div>

    <div class="form-group">
        <label>Mot de passe</label>
        <input  type="password" placeholder="password" id="password" name="password" class="form-control">
    </div>
    
    <input class="btn btn-primary" type="submit" value="Connexion"  name="formLogin" id="formLogin"/>
    <a href="?where=registration">Pas de compte ?</a>
    </form>
</div>
{% endblock %}
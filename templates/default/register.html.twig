{% extends "template_base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="../assets/css/navbar_other_page.css"/>
{% endblock %}

{% block content %}
<div class="container">
    <form action="?where=registration" method="POST">
    
    <h2>Cr√©ation de compte</h2>
    {% if message is not null %}
        <div class="alert alert-danger" role="alert">
            {{message}}
        </div>
    {% endif %}
    <div class="form-group">
        <label>Adresse email</label>
        <input type="email" placeholder="Votre email" id="email" name="email" class="form-control" required>
    </div>
    <div class="form-group">
        <label>Pseudo</label>
        <input type="text" placeholder="Votre Pseudo" id="username" name="username" class="form-control" required minlength="4" maxlength="100">
    </div>
    <div class="form-group">
        <label>Mot de passe</label>
        <input  type="password" placeholder="password" id="password" name="password" class="form-control" required minlength="6" maxlength="100">
    </div>
    <div class="form-group">
        <label>Confirmation du mot de passe</label>
        <input type="password" class="form-control" id="confirm_password" placeholder="Confirmer le mot de passe" required>
    </div>
    
    <input class="btn btn-primary" type="submit" value="Inscription" name="forminscription" id="forminscription"/>
    <a href="?where=login">Login</a>
    </form>

</div>


<script type="text/javascript" src="../assets/js/confirm_password.js"></script>
{% endblock %}

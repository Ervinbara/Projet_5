{% extends "template_base.html.twig" %}


{% block content %}
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="../assets/banner.css"/>
    {% endblock %}
    <div class="header-banner"></div> {#Contient l'image de la banniere #}
    
    {% for article in articles %}
        <article class="container">
            <figure>
                <img src="images/m2.jpg" alt="">
            </figure>
            <div class="right">
                <p class="date">{{article.creation_date_fr}}</p>
                <h3>{{article.title}}</h3>
                <p>{{article.content}}</p>
                <a href="index.php?where=displayArticle&amp;id={{article.id}}">Voir plus</a>
            </div> 
      </article>
    {% endfor %}
    
{% endblock %}
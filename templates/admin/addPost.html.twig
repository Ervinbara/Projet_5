     <div class="container"> 
        <form method="POST" action="?where=addPost" enctype="multipart/form-data">
        {# modifier si on modifie l'article #}
            <h2>Ajouter un article</h2>

            <div class="form-group">
                <label>Titre</label>
                <input type="text" name="titre" placeholder="Titre" id="titre" class="form-control"/>
            </div>

            <div class="form-group">
                <label>Contenu</label>
                <textarea id="post" name="contenu" placeholder="Contenu de l'article" class="form-control"></textarea> 
            </div>

            <div class="form-group">
                <label>Image</label>
                <input type="file" name="image"/>
            </div>

            <input type="HIDDEN" id="author" name="author" value="{{app.security.username}}" />

            <input class="btn btn-primary" type="submit" value="Poster" name="addPost" id="addPost"/>

        </form>
    </div>
{% endblock %}
</header>

    <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3 ">
            <h1 class="m-0 font-weight-bold centered-text" id="Matches">Commentaire signaler</h1>
        </div>
        <div class="card-body row">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th id="Name" scope="col">Pseudo</th>
                    <th id="Name" scope="col">Commentaire</th>
                </tr>
                </thead>
                <tbody>


                 {% for comment in commentReport %}
                    <tr>
                        <td>{{ comment.author|e }}</td>
                        <td>{{ comment.comment|e }}</td>
                        <td>
                            <div class="admin_action">
                                <form method="POST">
                                    <input name="comment_id" value="{{comment.id}}" type="hidden">
                                    
                                    <input class="btn btn-primary" type="submit" value="Valider" name="validComment" id="validComment"/>
                                    <input class="btn btn-danger" type="submit" value="Supprimer" name="deleteComment" id="deletePost"/>

                                    {# <input class="btn btn-primary" type="submit" value="Supprimer" name="deleteUser" id="deleteUser"/> #}
                                    
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                

                </tbody>
            </table>
            
            <div class="container">
                <a href="?where=manageComment">Retour</a>
            </div>
        </div>
    </div>

{% endblock %}

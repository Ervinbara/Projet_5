{% extends "template_base.html.twig" %}


{% block content %}

<div class="container">
    <form method="POST" action="?where=login">
    <h2>Connexion</h2>

    <div class="form-group">
        <label>Pseudo</label>
        <input type="text" placeholder="Votre Pseudo" id="username" name="username" class="form-control">
    </div>

    <div class="form-group">
        <label>Mot de passe</label>
        <input  type="password" placeholder="password" id="password" name="password" class="form-control">
    </div>
    
    <input class="btn btn-primary" type="submit" value="Connexion"  name="formLogin" id="formLogin"/>
    <a href="?where=registration">Pas de compte ?</a>
    </form>
</div>
{% endblock %}